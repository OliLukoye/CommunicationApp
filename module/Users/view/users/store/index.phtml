<h3>Список товаров</h3>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($this->storeProducts as $product) : ?>
        <tr>
            <td><?php echo $this->escapeHtml($product->name); ?></td>

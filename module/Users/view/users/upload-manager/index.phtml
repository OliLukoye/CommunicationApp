    <thead>
        <tr>
            <th>Lable</th>
            <th>Filename</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($this->myUploads as $value) : ?>
        <tr>
            <td><?php echo $this->escapeHtml($value->label); ?></td>
            <td><?php echo $this->escapeHtml($value->filename); ?></td>
